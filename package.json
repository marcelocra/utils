{
  "name": "mcra-utils",
  "version": "0.1.4",
  "description": "Be more productive by automating tasks and avoiding code rewrites.",
  "type": "module",
  "bin": "bin.js",
  "main": "lib.js",
  "scripts": {
    "server": "shadow-cljs stop && shadow-cljs start",
    "server:stop": "shadow-cljs stop",
    "dev-bin": "shadow-cljs watch bin",
    "dev-lib": "shadow-cljs watch lib",
    "release-bin": "npm run clean && shadow-cljs release bin",
    "release-lib": "npm run clean && shadow-cljs release lib",
    "test-w": "shadow-cljs watch test --config-merge \"{:autorun true}\"",
    "test": "shadow-cljs compile test && node out/test.js",
    "e2e": "shadow-cljs compile e2e && node out/e2e.js",
    "quick-e2e": "shadow-cljs compile lib && pnpm run e2e",
    "clean": "shx rm -rf ./compiled/"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.14.8",
    "@types/shelljs": "^0.8.15",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-preact": "^1.4.0",
    "eslint-config-prettier": "^9.1.0",
    "ink": "^5.0.1",
    "nbb": "^1.2.188",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "react": "^18.3.1",
    "shadow-cljs": "^2.28.10",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "typescript": "^5.5.2",
    "zx": "^8.1.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google",
      "preact"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "author": {
    "name": "Marcelo Almeida",
    "email": "npm@marcelocra.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcelocra/utils"
  },
  "license": "MIT",
  "packageManager": "npm@10.5.0"
}
