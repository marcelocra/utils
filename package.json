{
  "name": "mcra-utils",
  "version": "0.1.4",
  "description": "Be more productive by automating tasks and avoiding code rewrites.",
  "type": "module",
  "bin": "bin.js",
  "main": "lib.js",
  "scripts": {
    "---------------------------- SHADOW-CLJS ----------------------------": "",
    "NOTE": "Still now working with cljs. Later try with the `dist` output, using bin.mjs and lib.mjs there.",
    "sc": "shadow-cljs",
    "server": "shadow-cljs stop && shadow-cljs start",
    "server:stop": "shadow-cljs stop",
    "dev:bin": "shadow-cljs watch bin",
    "dev:lib": "shadow-cljs watch lib",
    "release:bin": "pnpm clean && shadow-cljs release bin",
    "release:lib": "pnpm clean && shadow-cljs release lib",
    "review:test": "shadow-cljs watch test --config-merge \"{:autorun true}\"",
    "test:once": "shadow-cljs compile test && node out/test.js",
    "e2e": "shadow-cljs compile e2e && node out/e2e.js",
    "quick-e2e": "shadow-cljs compile lib && pnpm run e2e",
    "clean": "shx rm -rf dist/",
    "------------------------------- DENO -------------------------------": "",
    "test": "deno test src/lib",
    "test:watch": "deno test --watch src/lib",
    "-------------------------------- BUN --------------------------------": "",
    "nbb": "nbb src/dev/marcelocra/core.cljs"
  },
  "dependencies": {
    "ink": "^5.0.1",
    "nbb": "^1.2.188",
    "react": "^18.3.1",
    "shelljs": "^0.8.5",
    "zx": "^8.1.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.14.2",
    "@types/shelljs": "^0.8.15",
    "eslint": "^9.4.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-preact": "^1.4.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.6.2",
    "shadow-cljs": "^2.28.7",
    "shx": "^0.3.4",
    "typescript": "^5.4.5",
    "@types/bun": "latest"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google",
      "preact"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "author": {
    "name": "Marcelo Almeida",
    "email": "npm@marcelocra.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcelocra/utils"
  },
  "license": "MIT",
  "packageManager": "bun@1.1.10"
}